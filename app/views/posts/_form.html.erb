<%= form_for(@post) do |f| %>
  
  <%= render 'shared/error_messages' %>

  <div class="form-group">
    <%= f.label :category_id %><br>
    <%= f.collection_select(:category_id, Category.all, :id, :name, {prompt: "Chosse a category" }, class: "form-control") %><br>
  </div>

  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, placeholder: "Type the post title here", class: "form-control" %><br>
  </div>

  <div class="form-group">
    <%= f.label :content %><br>
    <%= f.text_area :content, size: "60x12", placeholder: "Type the post text here", class: "form-control" %><br>
  </div>

  <%= f.submit class: "btn btn-primary" %>

<% end %>